<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>ジャンル編集</h2>
            <%= form_with model: [:admin, @genre], local: true do |f| %>
            <table>
              <thead>
                <tr>
                  <th>ジャンル名</th>
                  <th><%= f.text_field :name %></th>
                  <th><%= f.submit "変更を保存" %></th>
                </tr>
              </thead>
            </table>
            <% end %>
        </div>
    </div>
</div>