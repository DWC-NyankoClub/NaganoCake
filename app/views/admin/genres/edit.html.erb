<%= render "admin/items/error_messages", obj: @genre %>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>ジャンル編集</h3>
            <%= form_with model: [:admin, @genre], local: true do |f| %>
            <table class="mt-3 mb-3">
              <thead>
                <tr>
                  <th>ジャンル名</th>
                  <th><%= f.text_field :name %></th>
                  <th><%= f.submit "変更を保存" %></th>
                </tr>
              </thead>
            </table>
            <% end %>
        </div>
    </div>
</div>