<div class ="container">
    <div class="row">
        <div>
            <h3>商品一覧</h3>
        </div>
        <div class="ml-4">
            <%= link_to "", new_admin_item_path, class:"fas fa-plus-circle fa-2x new_btn_color" %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
          <table class="table-light table table-hover table-inverse">
              <thead class="thead-light">
                <tr>
                  <th>商品ID</th>
                  <th>商品名</th>
                  <th>税抜価格</th>
                  <th>ジャンル</th>
                  <th>ステータス</th>
                </tr>
                  <!--<tr>商品ID</tr>-->
                  <!--<tr>商品名</tr>-->
                  <!--<tr>税抜価格</tr>-->
                  <!--<tr>ジャンル</tr>-->
                  <!--<tr>ステータス</tr>-->
              </thead>

            <% @items.each do |item|%>
              <tbody>
                  <td><%= item.id %></td>
                  <td>
                      <%= link_to admin_item_path(item) do %>
                      <%= item.name %>
                      <% end %>
                  </td>
                  <td><%= item.price %></td>
                  <td><%= item.genre.name %></td>
                  <% if item.is_active == true %>
                  <td class="active_color">販売中</td>
                  <% else %>
                  <td class="inactive_color">販売停止中</td>
                  <% end %>
              </tbody>
             <% end %>
          </table>
        </div>
    </div>
</div>