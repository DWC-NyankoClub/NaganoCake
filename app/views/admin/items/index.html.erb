<div class ="container">
    <div class="row">
        <div>
            <h1>商品一覧</h1>
        </div>
        <div>
            <%= link_to "", new_admin_item_path, class:"fas fa-plus-circle fa-3x new_btn_color" %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-10">
          <table>
              <thead>
                  <tr>商品ID</tr>
                  <tr>商品名</tr>
                  <tr>税抜価格</tr>
                  <tr>ジャンル</tr>
                  <tr>ステータス</tr>
              </thead>

            <% @items.each do |item|%>
              <tbody>
                  <td><%= item.id %></td>
                  <td>
                      <%= link_to admin_item_path(item) do %>
                      <%= item.name %>
                      <% end %>
                  </td>
                  <td><%= item.price %></td>
                  <td><%= item.genre.name %></td>
                  <% if item.is_active == true %>
                  <td class="active_color">販売中</td>
                  <% else %>
                  <td class="inactive_color">販売停止中</td>
                  <% end %>
              </tbody>
             <% end %>
          </table>
        </div>
    </div>
</div>