<div class ="container">
    <div class="low">
        <div class="col-md-2">
          <h1>商品編集</h1>
        </div>
    </div>


    <%=form_with model: [:admin, @item], local:true do |f| %>
    <div class="low">
        <div class="col-md-8">
        <div>
         <label>商品画像</label>
         <%= f.attachment_field :image_id %>
        </div>

        <div>
         <label>商品名</label>
         <%= f.text_field :name, class:"form-control"%>
        </div>

        <div>
         <label>商品説明</label>
         <%=f.text_ :description, class:"form-control"%>
        </div>

        <div>
         <label>税抜き価格</label>
         <%=f.text_field :price, class:"form-control"%><p>円</p>
        </div>
        </div>
    </div>
    <% end %>
</div>