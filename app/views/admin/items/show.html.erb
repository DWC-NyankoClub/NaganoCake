<div class="container">
<%= notice %>
  <div class="row">
    <div class="col-md-6 offset-md-2">
      <h4 class="d-inline-flex px-3 py-1 font-weight-bold mt-5 mb-2">商品詳細</h4>
    </div>
  </div>

  <div class="row mt-5 offset-md-2">
    <div class="col-md-3 text-center">
      <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg' %>
    </div>
    <div class="col-md-8 ml-5">
      <table class="table">
        <tbody>
          <tr>
            <td><p>商品名</p></td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td><p>商品説明</p></td>
            <td><%= @item.description %></td>
          </tr>
          <tr>
            <td><p>ジャンル</p></td>
            <td><%= Genre.find(@item.genre_id).name %></td>
          </tr>
          <tr>
            <td><p>価格(税込)</td>
            <td><p><%= @item.price %>(<%= @item.tax_included_price.floor %>)円</p></td>
          </tr>
          <tr>
            <td><p>販売ステータス</p></td>
            <% if @item.is_active == true %>
              <td class="active_color">販売中</td>
            <% else %>
              <td class="inactive_color">販売停止中</td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6 offset-md-5">
      <%= link_to '編集', edit_admin_item_path(@item.id), class: 'btn w-25 btn-success' %>
    </div>
  </div>
</div>