<div class="container">
    <div class="row">
        <div class="col-md-10">
            <h1>注文情報入力</h1>
        </div>
    </div>
    <div class="row">
     <div class="col-md-10">
       <label>支払い方法</label>
      　<%= f.radio_button :pay_type, :true %>
      　<%= f.label :pay_type, "クレジットカード", {value: :true, style: "display: inline-block;"} %>
      　<%= f.radio_button :pay_type, :false %>
      　<%= f.label :pay_type, "銀行振込", {value: :false, style: "display: inline-block;"} %>
      </div>
    </div>
    <div class="row">
     <div class="col-md-10">
       <label>お届け先</label>
      　<%= f.radio_button :address, :true %>
      　<%= f.label :pay_type, "クレジットカード", {value: :true, style: "display: inline-block;"} %>
      　<%= f.radio_button :pay_type, :false %>
      　<%= f.label :pay_type, "銀行振込", {value: :false, style: "display: inline-block;"} %>
       </div>
    </div>
</div>