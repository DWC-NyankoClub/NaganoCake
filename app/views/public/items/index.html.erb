<div class="container">
    <div class="row">
        <div class="col-md-12">
          <div>  
          <% if @genre %>
            <p>
              <strong><%= @genre.name %>一覧</strong>(全<%= @genre.items.count %>件)&emsp; &emsp;
              〜
              <% @genres.each do |genre| %> 
                <%= link_to genre.name, items_path(id: genre), class: 'btn btn-sm' %>
              <% end %>
              〜
            </p>
            <% @genre.items.each do |item| %>
            <table class="d-inline-block">
              <tr>
                <td>
                  <%= link_to item_path(item) do %>
                    <%= attachment_image_tag(item, :image, format: 'jpeg', size: "200x150") %>
                  <% end %>
                </td>
              </tr>            
              <tr>
                <td><%= item.name %></td>
              </tr>
              <tr>
                <td><%= item.price %></td>
              </tr>
            </table>
            <% end %>
          <% else %>
            <p>
              <strong>商品一覧</strong>(全<%= @items.count %>件)&emsp; &emsp;
              〜
              <% @genres.each do |genre| %> 
                <%= link_to genre.name, items_path(id: genre), class: 'btn btn-sm' %>
              <% end %>
              〜
            </p>
            <% @items.each do |item| %>
            <table class="d-inline-block">
              <tr>
                <td>
                  <%= link_to item_path(item) do %>
                    <%= attachment_image_tag(item, :image, format: 'jpeg', size: "200x150") %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td><%= item.name %></td>   
              </tr>
              <tr>
                <td><%= item.price %></td>
              </tr>
            </table> 
            <% end %>
          <% end %>
          </div>
        </div>
    </div>
</div>